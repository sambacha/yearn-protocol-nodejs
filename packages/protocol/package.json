{
	"name": "yearn-protocol",
	"version": "0.6.0",
	"description": "Reference version of the Yearn Protocol for NodeJS/TS",
	"files": [
		"/contracts/**/*.sol",
		"/build/contracts/*.json",
		"!/contracts/mocks/**/*",
		"/typings/**/*",
		"/ethers/**/*",
		"/web3/**/*",
		"packages/vaults/**/*"
	],
	"scripts": {
		"setup": "npx hardhat compile",
		"compile": "npx truffle compile",
		"lint:prettier": "npx prettier --write contracts/**/**/**/**/**.sol",
		"lint:fix": "npm run lint:js:fix",
		"lint:js": "npx eslint --ignore-path .gitignore .",
		"lint:js:fix": "npx eslint --ignore-path .gitignore . --fix",
		"test": "npx truffle test",
		"test:ganache": "npx truffle test --network ganache",
		"deploy:ganache": "npx truffle migrate --reset --network ganache",
		"deploy:rinkeby": "npx truffle migrate --reset --network infuraRinkeby",
		"deploy:mainnet-dryrun": "npx truffle migrate --reset --network --dry-run infuraMainnet",
		"deploy:mainnet": "npx truffle migrate --reset --network infuraMainnet",
		"ethers-abi": "abi-types-generator './build/contracts/*.json' --output='./ethers/generated-typings' --name=yearn --provider=ethers_v5",
		"web3-abi": "abi-types-generator './build/contracts/*.json' --output='./web3/generated-typings' --name=yearn",
		"postinstall": "mv node_modules/@openzeppelin node_modules/@openzeppelinV2"
	},
	"dependencies": {
		"@openzeppelin/contracts": "^2.5.1"
	},
	"devDependencies": {
		"@babel/core": "7.13.10",
		"@babel/plugin-proposal-class-properties": "^7.13.0",
		"@babel/plugin-transform-runtime": "^7.13.10",
		"@babel/preset-env": "^7.13.12",
		"@babel/preset-typescript": "^7.13.0",
		"@chainsafe/truffle-plugin-abigen": "0.0.2",
		"@nomiclabs/hardhat-etherscan": "^2.1.0",
		"@nomiclabs/hardhat-truffle5": "^2.0.0",
		"@nomiclabs/hardhat-vyper": "^2.0.1",
		"@nomiclabs/hardhat-web3": "^2.0.0",
		"@openzeppelin/test-environment": "^0.1.4",
		"@truffle/debug-utils": "^5.0.7",
		"@truffle/hdwallet-provider": "^1.0.35",
		"@typechain/ethers-v5": "^6.0.5",
		"@typechain/hardhat": "^1.0.1",
		"@types/fs-extra": "^9.0.8",
		"@typescript-eslint/parser": "^4.19.0",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"chai-bignumber": "^2.0.2",
		"codecov": "^3.8.1",
		"decimal.js": "^10.2.1",
		"dotenv": "^8.2.0",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.17.2",
		"eslint-plugin-node": "^8.0.1",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-standard": "^4.0.0",
		"fs-extra": "^7.0.1",
		"hardhat": "^2.5.0",
		"hardhat-contract-sizer": "^2.0.3",
		"hardhat-dependency-compiler": "^1.1.1",
		"hardhat-deploy": "^0.7.0-beta.49",
		"hardhat-deploy-ethers": "^0.3.0-beta.7",
		"mocha": "^8.2.1",
		"prettier": "^2.2.1",
		"prettier-config-solidity": "1.4.0",
		"prettier-plugin-solidity": "1.0.0-beta.6",
		"solc": "^0.5.17",
		"solhint": "^3.3.3",
		"solhint-plugin-prettier": "^0.0.5",
		"solidity-coverage": "^0.7.13",
		"solium": "^1.2.5",
		"truffle": "^5.1.21",
		"ts-generator": "^0.1.1",
		"ts-node": "^9.1.1",
		"typechain": "^4.0.1",
		"typescript": "^4.2.3"
	},
	"keywords": [
		"solidity",
		"ethereum",
		"smart",
		"contracts",
		"yearn",
		"defi",
		"yearn finance",
		"yfi",
		"blockchain",
		"web3",
		"ethers"
	],
	"peerDependencies": {
		"web3": "^1.3.0"
	}
}
